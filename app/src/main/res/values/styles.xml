<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorError">@color/colorRedDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--ScrollView style-->
    <style name="Style_ScrollView" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbars">vertical</item>>
        <item name="android:fadingEdge">vertical</item>>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:animationCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorPrimaryDark</item>
        <item name="android:scrollbarTrackVertical">@color/colorBlackTrans_high</item>
        <item name="android:colorEdgeEffect">@color/colorBlackTrans_medium</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="fastScrollVerticalThumbDrawable">@color/colorPrimaryDark</item>
        <item name="android:overScrollMode">never</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!--TextViews with intent -->
    <style name="Style_PageLinks" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--
        ShimmerFrameLayout
    -->
    <style name="Style_Shimmer_TextView_Labels">
        <item name="android:layout_height">@dimen/dimen_shimmer_text_view_height</item>
        <item name="android:layout_width">@dimen/dimen_shimmer_text_view_width</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <style name="Style_Shimmer_EditText">
        <item name="android:layout_height">@dimen/dimen_shimmer_edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <!--
        BottomSheets
    -->
    <!--BottomSheets title texts-->
    <style name="Style_BottomSheets_Titles" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--BottomSheets dismiss icon-->
    <style name="Style_BottomSheets_Dismiss" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:padding">@dimen/dimen_icon_padding_small</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:src">@drawable/ic_baseline_close_24_black</item>
        <item name="android:contentDescription">@string/content_description_icon</item>
    </style>

    <!--Custom LinearLayout button-->
    <style name="Style_CustomButton_Container_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Style_CustomButton_No_Margins_Parent_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark</item>
    </style>

    <style name="Style_CustomButton_Container_Stroke_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_stroke_primary_dark</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Custom LinearLayout button-->

    <!--Custom LinearLayout button-->
    <style name="Style_CustomButton_Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>