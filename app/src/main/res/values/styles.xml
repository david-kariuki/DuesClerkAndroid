<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorError">@color/colorPrimaryRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--ProgressDialog-->
    <style name="Style_ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!--ScrollView style-->
    <style name="Style_ScrollView" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbars">vertical</item>>
        <item name="android:fadingEdge">vertical</item>>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:animationCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorPrimaryDark</item>
        <item name="android:scrollbarTrackVertical">@color/colorBlackTrans_high</item>
        <item name="android:colorEdgeEffect">@color/colorBlackTrans_medium</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="fastScrollVerticalThumbDrawable">@color/colorPrimaryDark</item>
        <item name="android:overScrollMode">never</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!--TextViews with intent -->
    <style name="Style_PageLinks" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Toolbars-->
    <style name="Style_Toolbar_Container_Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="elevation">@dimen/dimen_toolbar_elevation_medium</item>
        <item name="android:layout_height">@dimen/dimen_toolbar_height_medium</item>
        <item name="android:minHeight">@dimen/dimen_toolbar_height_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Style_Toolbar_Title_Medium_Primary_Dark">
        <item name="android:textSize">@dimen/dimen_toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Style_Toolbar_Icon_Exit">
        <item name="android:layout_height">@dimen/dimen_icon_size_small</item>
        <item name="android:layout_width">@dimen/dimen_icon_size_small</item>
        <item name="android:padding">@dimen/dimen_icon_padding_small</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24_primary_dark</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/content_description_icon_exit</item>
    </style>

    <!--ShimmerFrameLayout-->
    <style name="Style_Shimmer_TextView_Labels">
        <item name="android:layout_height">@dimen/dimen_shimmer_text_view_height</item>
        <item name="android:layout_width">@dimen/dimen_shimmer_text_view_width</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <style name="Style_Shimmer_EditText">
        <item name="android:layout_height">@dimen/dimen_shimmer_edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <!--
        BottomSheets
    -->
    <!--BottomSheets title texts-->

    <!--BottomSheets dismiss icon-->
    <style name="Style_BottomSheets_Dismiss" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:padding">@dimen/dimen_icon_padding_small</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:src">@drawable/ic_baseline_close_24_black</item>
        <item name="android:contentDescription">@string/content_description_icon_exit</item>
    </style>

    <!--Custom LinearLayout button-->
    <style name="Style_CustomButton_Container_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Style_CustomButton_No_Margins_Parent_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark
        </item>
    </style>

    <!--Stroke continuous-->

    <!--Stroke dotted-->
    <style name="Style_CustomButton_Container_Stroke_Dotted_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">
            @drawable/outline_curved_rectangle_stroke_dotted_primary_dark
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Custom LinearLayout button-->
    <style name="Style_CustomButton_Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Style_CustomButton_Text_No_Margins">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>