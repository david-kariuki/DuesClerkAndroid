<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorPrimaryRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Style_SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:singleLine">true</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:inputType">text</item>
        <item name="android:queryBackground">@color/colorWhite</item>
        <item name="android:queryHint">@string/hint_search_contacts</item>
        <item name="android:searchHintIcon">@drawable/ic_baseline_search_24_primary_dark</item>
        <item name="android:searchIcon">@drawable/ic_baseline_search_24_primary_dark</item>
    </style>

    <!--ProgressDialog-->
    <style name="Style_ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!--ScrollView style-->
    <style name="Style_ScrollView" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbars">vertical</item>>
        <item name="android:fadingEdge">vertical</item>>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:animationCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorPrimaryDark</item>
        <item name="android:scrollbarTrackVertical">@color/colorBlackTrans_high</item>
        <item name="android:colorEdgeEffect">@color/colorBlackTrans_medium</item>
        <item name="fastScrollVerticalThumbDrawable">@color/colorPrimaryDark</item>
        <item name="android:overScrollMode">never</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <!--ScrollView style-->
    <style name="Style_RecyclerView" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:animationCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:nestedScrollingEnabled">true</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbars">vertical</item>>
        <item name="android:fadingEdge">vertical</item>>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorPrimaryDark</item>
        <item name="android:scrollbarTrackVertical">@color/colorBlackTrans_high</item>
        <item name="android:colorEdgeEffect">@color/colorBlackTrans_medium</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="fastScrollVerticalThumbDrawable">@color/colorPrimaryDark</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!--TextViews with intent -->
    <style name="Style_PageLinks" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/dimen_text_view_links_size_normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Toolbars-->
    <style name="Style_Toolbar_Container_Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="elevation">@dimen/dimen_toolbar_activity_elevation_medium</item>
        <item name="android:layout_height">@dimen/dimen_toolbar_activity_height_medium</item>
        <item name="android:minHeight">@dimen/dimen_toolbar_activity_height_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Style_Toolbar_Title_Medium_Primary_Dark">
        <item name="android:textSize">@dimen/dimen_text_view_toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!--Exit icon-->
    <style name="Style_Toolbar_Icon_Exit">
        <item name="android:layout_height">@dimen/dimen_image_view_icon_size_small</item>
        <item name="android:layout_width">@dimen/dimen_image_view_icon_size_small</item>
        <item name="android:padding">@dimen/dimen_image_view_icon_padding_small</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24_primary_dark</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/content_description_icon_exit</item>
    </style>

    <!--ShimmerFrameLayout-->
    <style name="Style_Shimmer_TextView_Labels">
        <item name="android:layout_height">@dimen/dimen_shimmer_text_view_height</item>
        <item name="android:layout_width">@dimen/dimen_shimmer_text_view_width_medium</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <style name="Style_Shimmer_EditText">
        <item name="android:layout_height">@dimen/dimen_shimmer_edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_shimmer_item_grey</item>
    </style>

    <!--BottomSheets dismiss icon-->
    <style name="Style_BottomSheets_Dismiss" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:padding">@dimen/dimen_image_view_icon_padding_small</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:src">@drawable/ic_baseline_close_24_black</item>
        <item name="android:contentDescription">@string/content_description_icon_exit</item>
    </style>

    <!--Custom LinearLayout button-->
    <style name="Style_CustomButton_Container_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark
        </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Style_CustomButton_Container_Fill_Primary_Grey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_grey
        </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Style_CustomButton_No_Margins_Parent_Fill_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_curved_fill_primary_dark
        </item>
    </style>

    <!--ExpandableLayout-->
    <style name="Style_ExpandableLayout">
        <item name="el_parallax">0.5</item>
        <item name="expanded">false</item>
        <item name="el_duration">@integer/int_expandable_layout_duration</item>
    </style>

    <!--Stroke continuous primary-->
    <style name="Style_CustomButton_Container_Stroke_Continuous_Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">
            @drawable/outline_rectangle_stroke_primary
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Stroke continuous primary-->
    <style name="Style_CustomButton_Container_Stroke_Continuous_Primary_Red">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">
            @drawable/outline_rectangle_stroke_primary_red
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Stroke continuous primary-->
    <style name="Style_CustomButton_Container_Stroke_Continuous_Primary_Grey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/outline_rectangle_stroke_primary_grey
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Stroke dotted-->
    <style name="Style_CustomButton_Container_Stroke_Dotted_Primary_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">
            @drawable/outline_curved_rectangle_stroke_dotted_primary_dark
        </item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Custom LinearLayout button-->
    <style name="Style_LinearLayout_Button_Text" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:lines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/dimen_text_view_button_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Custom TextView button-->
    <style name="Style_TextView_Button" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/dimen_text_view_button_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Password length counter TextView-->
    <style name="Style_PasswordCounterText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_edit_text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ems">2</item>
        <item name="android:hint">0</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryGrey</item>
    </style>

    <!--TextView labels-->
    <style name="Style_Text_Labels">
        <item name="android:textSize">@dimen/dimen_edit_text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorTextView</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
