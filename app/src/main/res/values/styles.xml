<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorRedDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--ScrollView style-->
    <style name="Style_ScrollView" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbars">vertical</item>>
        <item name="android:fadingEdge">vertical</item>>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:animationCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorPrimaryDark</item>
        <item name="android:scrollbarTrackVertical">@color/colorBlackTrans_high</item>
        <item name="android:colorEdgeEffect">@color/colorBlackTrans_medium</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="fastScrollVerticalThumbDrawable">@color/colorPrimaryDark</item>
        <item name="android:overScrollMode">never</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!--TextViews with intent -->
    <style name="Style_PageLinks" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
</resources>