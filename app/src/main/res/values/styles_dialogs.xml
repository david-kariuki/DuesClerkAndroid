<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:headerBackground">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimary</item>
        <item name="android:dayOfWeekTextAppearance">@color/colorPrimaryRed</item>
        <item name="android:headerMonthTextAppearance">@color/colorPrimary</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/colorWhite</item>
        <item name="android:headerYearTextAppearance">@color/colorPrimary</item>-->
        <item name="android:yearListItemTextAppearance">@color/colorBlack</item>
        <item name="android:yearListSelectorColor">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Style_Dialog_Titles">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--Options List Fragment-->
    <style name="Style_Options_List_Option">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/animation_ripple_list_grey</item>
    </style>

    <style name="Style_Options_List_Labels">
        <item name="android:textSize">@dimen/dimen_bs_list_text_labels_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Style_Options_List_Icons">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/outline_options_list_icons_background</item>
    </style>
</resources>
