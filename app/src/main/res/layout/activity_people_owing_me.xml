<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    tools:context="com.duesclerk.ui.PeopleOwingMe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.duesclerk.custom.custom_views.swipe_refresh.MultiSwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="top"
            android:id="@+id/swipeRefreshPeopleOwingMe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusedByDefault="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:descendantFocusability="beforeDescendants"
                tools:targetApi="o">

                <SearchView
                    android:id="@+id/searchViewContacts"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:elevation="@dimen/dimen_bs_toolbar_elevation"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:iconifiedByDefault="false"
                    android:closeIcon="@drawable/ic_x_100px_white"
                    android:gravity="start"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:queryHint="Search contacts"
                    android:searchHintIcon="@drawable/ic_baseline_search_24_primary_dark"
                    android:searchIcon="@drawable/ic_baseline_search_24_primary_dark"
                    android:theme="@style/AppSearchView"
                    />

                <include layout="@layout/content_people_owing_me" />

            </LinearLayout>
        </com.duesclerk.custom.custom_views.swipe_refresh.MultiSwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:id="@+id/llContacts_NoContacts">

            <include layout="@layout/layout_no_contacts"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_no_connection_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
