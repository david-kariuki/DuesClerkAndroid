<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    tools:context=".ui.PersonalSignup"
    tools:ignore="UnusedAttribute"
    tools:showIn="@layout/activity_personal_signup">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Style_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorActivityBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorActivityBackground"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="-1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="-1.0"
            app:layout_constraintWidth_percent=".9">

            <androidx.cardview.widget.CardView
                style="@style/Style_SignInSignUp_Profile_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dimen_card_view_corner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Style_Text_Labels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_first_and_last_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_image_view_icon_size_small"
                            android:layout_height="@dimen/dimen_image_view_icon_size_small"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/content_description_icon_first_name"
                            android:padding="@dimen/dimen_image_view_icon_padding_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_person_24_primary" />

                        <EditText
                            android:id="@+id/editSignUpActivity_FirstName"
                            style="@style/Style_TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:autofillHints=""
                            android:background="@null"
                            android:hint="@string/hint_first_name"
                            android:imeActionLabel="Next"
                            android:inputType="textPersonName|textCapWords" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_field_divider_height"
                        android:layout_marginStart="49dp"
                        android:layout_marginTop="@dimen/dimen_field_divider_margin_top"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorDividerGrey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_image_view_icon_size_small"
                            android:layout_height="@dimen/dimen_image_view_icon_size_small"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/content_description_icon_last_name"
                            android:padding="@dimen/dimen_image_view_icon_padding_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_email_24_primary"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/editSignUpActivity_LastName"
                            style="@style/Style_TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@null"
                            android:hint="@string/hint_last_name"
                            android:imeActionLabel="Next"
                            android:inputType="textPersonName|textCapWords" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Style_SignInSignUp_Profile_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_card_view_corner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Style_Text_Labels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_email_address" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_image_view_icon_size_small"
                            android:layout_height="@dimen/dimen_image_view_icon_size_small"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/content_description_icon_email_address"
                            android:padding="@dimen/dimen_image_view_icon_padding_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_email_24_primary" />

                        <EditText
                            android:id="@+id/editSignUpActivity_EmailAddress"
                            style="@style/Style_TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@null"
                            android:hint="@string/hint_email_address"
                            android:imeActionLabel="Next"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                style="@style/Style_SignInSignUp_Profile_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dimen_card_view_corner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Style_Text_Labels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_country_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_image_view_icon_size_small"
                            android:layout_height="@dimen/dimen_image_view_icon_size_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            android:contentDescription="@string/content_description_icon_country"
                            android:padding="@dimen/dimen_image_view_icon_padding_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_location_on_24_primary" />

                        <ImageView
                            android:id="@+id/imageSignupActivity_CountryFlag"
                            android:layout_width="@dimen/dimen_image_view_icon_size_medium"
                            android:layout_height="@dimen/dimen_image_view_icon_size_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="2dp"
                            android:contentDescription="@string/content_description_icon_country_flag"
                            android:padding="@dimen/dimen_image_view_icon_padding_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_flag_24_primary_grey" />

                        <EditText
                            android:id="@+id/editSignUpActivity_Country"
                            style="@style/Style_TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/hint_country_name"
                            android:imeActionLabel="Next"
                            android:inputType="text"
                            android:lines="2"
                            android:maxLines="2"
                            android:minLines="2"
                            android:singleLine="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Style_SignInSignUp_Profile_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dimen_card_view_corner_radius"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ImageView"
                        android:layout_width="@dimen/dimen_image_view_icon_size_small"
                        android:layout_height="@dimen/dimen_image_view_icon_size_small"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/content_description_icon_password"
                        android:padding="@dimen/dimen_image_view_icon_padding_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_lock_24_primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Style_TextInputLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/imageSignupActivity_PasswordToggle"
                        android:layout_toEndOf="@+id/ImageView"
                        android:hint="@string/hint_password"
                        app:boxBackgroundColor="@color/colorWhite"
                        app:boxStrokeWidth="0dp"
                        app:passwordToggleEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editSignUpActivity_Password"
                            style="@style/Style_SignInSignUp_Profile_TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingTop="25dp"
                            android:paddingBottom="0dp"
                            android:imeActionLabel="Done"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword|textNoSuggestions"
                            android:minEms="7" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageSignupActivity_PasswordToggle"
                        android:layout_width="@dimen/dimen_image_view_icon_size_small"
                        android:layout_height="@dimen/dimen_image_view_icon_size_small"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/content_description_icon_password_toggle"
                        android:padding="@dimen/dimen_image_view_icon_padding_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_visibility_24_primary_grey"
                        android:visibility="invisible" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llSignUpActivity_SignIn"
                    style="@style/Style_CustomButton_Container_Stroke_Dotted_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <ImageView
                        android:layout_width="@dimen/dimen_image_view_icon_size_small"
                        android:layout_height="@dimen/dimen_image_view_icon_size_small"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/content_description_icon_sign_in"
                        android:padding="@dimen/dimen_image_view_icon_padding_small"
                        android:src="@drawable/ic_baseline_arrow_back_24_primary_dark" />

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/action_sign_in"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSignUpActivity_SignUp"
                    style="@style/Style_CustomButton_Container_Fill_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="31dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/action_sign_up"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textCreateBusinessAccount"
                style="@style/Style_PageLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="@string/action_create_a_business_account"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
