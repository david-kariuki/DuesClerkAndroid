<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/symbol_full_colon"
                    android:textColor="@color/colorPrimaryGrey"
                    android:textSize="13sp" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/symbol_full_colon"
                    android:textColor="@color/colorPrimaryGrey"
                    android:textSize="13sp" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/symbol_full_colon"
                    android:textColor="@color/colorPrimaryGrey"
                    android:textSize="13sp" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/symbol_full_colon"
                    android:textColor="@color/colorPrimaryGrey"
                    android:textSize="13sp" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/Style_CustomButton_Container_Stroke_Continuous_Primary_Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_image_view_icon_size_small"
                    android:layout_height="@dimen/dimen_image_view_icon_size_small"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="@dimen/dimen_image_view_icon_padding_small" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/Style_CustomButton_Container_Stroke_Continuous_Primary_Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_image_view_icon_size_small"
                    android:layout_height="@dimen/dimen_image_view_icon_size_small"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="@dimen/dimen_image_view_icon_padding_small" />

                <View
                    style="@style/Style_Shimmer_TextView_Small"
                    android:layout_width="@dimen/dimen_shimmer_text_view_width_small"
                    android:layout_height="@dimen/dimen_shimmer_text_view_height"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!--Toolbar divider-->
        <include layout="@layout/divider_toolbar_activities" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
