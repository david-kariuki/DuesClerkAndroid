<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorGreyLight300"> <!-- Ripple color -->

    <item>
        <color android:color="@color/colorWhite" /> <!-- Normal bg color -->
    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle" android:tint="@color/colorWhite">
            <corners android:radius="20dp"/>
        </shape>
    </item>
</ripple>